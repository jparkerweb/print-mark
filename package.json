{
  "name": "print-mark",
  "version": "1.1.0",
  "description": "Convert Markdown to clean, printable HTML with PDF export",
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "clean": "rimraf node_modules package-lock.json && npm install",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "node --watch dist/server/index.js",
    "dev:client": "vite",
    "build": "tsc -p tsconfig.server.json && vite build",
    "start": "node dist/server/index.js",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:slow": "vitest run --mode slow tests/slow",
    "test:all": "vitest run --mode all tests",
    "prepare": "husky",
    "lint-staged": "lint-staged",
    "docker:build": "docker build -t print-mark .",
    "docker:run": "docker run -p 3000:3000 --rm --init print-mark"
  },
  "keywords": [
    "markdown",
    "pdf",
    "print",
    "converter"
  ],
  "author": "",
  "license": "Apache-2.0",
  "dependencies": {
    "@codemirror/commands": "^6.10.1",
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/language": "^6.12.1",
    "@codemirror/search": "^6.5.11",
    "@codemirror/state": "^6.5.3",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.39.5",
    "@fastify/cors": "^11.2.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/multipart": "^9.3.0",
    "@fastify/static": "^8.3.0",
    "dompurify": "^3.3.1",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.2",
    "highlight.js": "^11.11.1",
    "isomorphic-dompurify": "^2.34.0",
    "jsdom": "^27.3.0",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^9.2.0",
    "markdown-it-footnote": "^4.0.0",
    "markdown-it-task-lists": "^2.1.1",
    "puppeteer": "^24.34.0",
    "shiki": "^3.20.0",
    "zod": "^4.2.1"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "vitest related --run"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/dompurify": "^3.0.5",
    "@types/jsdom": "^27.0.0",
    "@types/markdown-it": "^14.1.2",
    "@types/markdown-it-anchor": "^4.0.4",
    "@types/markdown-it-footnote": "^3.0.4",
    "@types/node": "^24.10.3",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "@vitest/coverage-v8": "^4.0.16",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "happy-dom": "^20.0.11",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  }
}
